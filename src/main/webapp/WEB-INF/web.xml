<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>sitename</param-name>
        <param-value>Quiztopia</param-value>
        <description>The name of the site for headers and title bars</description>
    </context-param>
    <filter>
        <filter-name>UserAuthenticator</filter-name>
        <filter-class>com.fpt.assignment.filter.UserAuthenticator</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserAuthenticator</filter-name>
        <url-pattern>/WEB-INF/jsp/user-only/*</url-pattern>
        <url-pattern>/DoQuizServlet</url-pattern>
        <url-pattern>/PreviewQuizServlet</url-pattern>
        <url-pattern>/SearchQuizServelet</url-pattern>
        <url-pattern>/ViewManageQuizServlet</url-pattern>
        <url-pattern>/ViewQuizServlet</url-pattern>
        <url-pattern>/ViewResultsServlet</url-pattern>
        <url-pattern>/AddQuizServlet</url-pattern>
        <url-pattern>/DeleteQuizServlet</url-pattern>
        <url-pattern>/LogoutServlet</url-pattern>
        <url-pattern>/SubmitServlet</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>SearchQuizServelet</servlet-name>
        <servlet-class>com.fpt.assignment.controller.page.SearchQuizServelet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchQuizServelet</servlet-name>
        <url-pattern>/SearchQuizServelet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <exception-type>java.lang.RuntimeException</exception-type>
        <location>/error.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error.jsp</location>
    </error-page>
</web-app>
